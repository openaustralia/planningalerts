development:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: pa_development
  pool: 5
  username: planningalerts
  password:
  socket: /var/run/mysqld/mysqld.sock

mysql: &mysql
  adapter: mysql2
  encoding: utf8
  reconnect: false
  pool: 5
  username: root
  password:
  database: pa_test
  socket: /var/run/mysqld/mysqld.sock

postgresql: &postgresql
  adapter: postgresql
  encoding: utf8
  reconnect: false
  pool: 5
  username: postgres
  password:
  database: pa_test

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test: &TEST
  <<: *<%= ENV['DB'] || "mysql" %>
