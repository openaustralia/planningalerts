<%= tag.div class: "h-full w-full bg-google-maps-green",
            "x-data" => "{ circle: null }",
            "x-init" => "circle = await initialiseAlertMap2($el, { lat: #{@lat}, lng: #{@lng}, address: '#{@address}', zoom: #{@zoom}, radius_meters: #{@radius_meters}}); $watch('#{@radius_meters}', value => circle.setRadius(value))" do %>
  <noscript><%= content %></noscript>
<% end %>
