<% if @tag == :a %>
  <%= link_to @href, @options do %>
    <div class="flex items-baseline justify-center gap-4">
      <%# The content should fully describe what the button does so the icon is "decorative" hence the empty alt tag %>
      <% if @icon_path %><%= image_tag @icon_path, alt: "" %><% end %>
      <div><%= content %></div>
    </div>
  <% end %>
<% elsif @tag == :button %>
  <%= button_tag @options do %>
    <div class="flex items-baseline justify-center gap-4">
      <% if @icon_path %><%= image_tag @icon_path, alt: "" %><% end %>
      <div><%= content %></div>
    </div>
  <% end %>
<% end %>
