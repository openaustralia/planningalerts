<% if @tag == :a %>
  <%= link_to @href, class: (@classes + %w[inline-block]) do %>
    <div class="flex items-baseline gap-4">
      <% if @icon_path %><%= image_tag @icon_path, alt: @icon_alt %><% end %>
      <%= content %>
    </div>
  <% end %>
<% elsif @tag == :button %>
  <%= button_tag name: nil, class: (@classes + %w[flex gap-4 items-baseline]) do %>
    <% if @icon_path %><%= image_tag @icon_path, alt: @icon_alt %><% end %>
    <%= content %>
  <% end %>
<% end %>
