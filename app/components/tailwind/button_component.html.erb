<% if @tag == :a %>
  <%= link_to @href, @options do %>
    <div class="flex items-baseline justify-center gap-4">
      <% if @icon %><%= render Tailwind::Icon.new(name: @icon) %><% end %>
      <div><%= content %></div>
    </div>
  <% end %>
<% elsif @tag == :button %>
  <%= button_tag @options do %>
    <div class="flex items-baseline justify-center gap-4">
      <% if @icon %><%= render Tailwind::Icon.new(name: @icon) %><% end %>
      <div><%= content %></div>
    </div>
  <% end %>
<% end %>
