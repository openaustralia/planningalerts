%meta{ content: "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
%meta{ name: "viewport", content: "width=device-width,user-scalable=no,initial-scale=1,maximum-scale=1" }
- if yield(:meta_description)
  %meta{ name: "Description", content: yield(:meta_description) }

%title
  = yield(:page_title).presence || "Email alerts of planning applications near you"
  | PlanningAlerts

= render "analytics"

= stylesheet_link_tag "standard/all.css", media: "screen"
= stylesheet_link_tag "standard/print.css", media: "print"
/[if IE]
  = stylesheet_link_tag "standard/ie.css", media: "screen"
= javascript_include_tag "https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js", defer: true

= csrf_meta_tag
= yield :extra_meta_tags
