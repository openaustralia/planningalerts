.dropdown.sort-options{ "x-data": "{open: false}" }
  %button.dropdown-toggle{ "@click": "open = !open" }
    Sorted by
    - if sort == "time"
      most recent first
    - else
      closest first
    = image_tag "standard/chevron-up-down.svg", size: "16x16"
  %ul.dropdown-menu{ "x-show": "open", "x-cloak": true, "@click.outside": "open = false" }
    %li{ class: ("disabled" if sort == "time") }
      = link_to "most recent first", { sort: "time", page: nil }.merge(extra_params)
    %li{ class: ("disabled" if sort == "distance") }
      = link_to "closest first", { sort: "distance", page: nil }.merge(extra_params)

- if Flipper.enabled?(:extra_options_on_address_search, current_user)
  %ul
    - if sort == "time"
      %li= link_to "within 200 metres", "#"
      %li= link_to "within 800 metres", "#"
      %li= link_to "within 2 kilometres", "#"
    - else
      %li= link_to "within the last 3 months", "#"
      %li= link_to "within the last 6 months", "#"
      %li= link_to "within the last year", "#"
      %li= link_to "within the last 2 years", "#"
      %li= link_to "within the last 5 years", "#"
      %li= link_to "all time", "#"
