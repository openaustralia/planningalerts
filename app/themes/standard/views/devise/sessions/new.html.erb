<div class="login-block">
  <h2>Sign in to PlanningAlerts</h2>

  <%= semantic_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.inputs do %>
      <%= f.input :email, label: "Your email", placeholder: "your@email.com", input_html: { autofocus: true, autocomplete: "email" } %>
      <%= f.input :password, placeholder: "••••••••", input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean %>
    <% end %>

    <%= f.actions do %>
      <%= f.action :submit, label: "Sign in", button_html: { class: "button button-rounded button-large button-action" } %>
    <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
