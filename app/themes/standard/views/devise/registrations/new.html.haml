%h3 Register for account

= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource

  = f.inputs do
    = f.input :email, required: false, input_html: { autofocus: true }
    = f.input :name, hint: "Please use your full name", label: "Your name"
    = f.input :password, required: false
  = f.actions do
    = f.action :submit, label: "Register", button_html: { class: "button button-rounded button-large button-action" }

= render "devise/shared/links"
