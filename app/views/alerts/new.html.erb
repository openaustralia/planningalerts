<%= render HeadingComponent.new(tag: :h2).with_content("Create new alert") %>
<%= form_with model: @alert, class: "mt-12" do |f| %>
  <div>
    <%= f.label :address, "Enter a street address" %>
    <%= f.street_address_field :address, class: "mt-2 block w-full" %>
    <%= f.error :address, class: "mt-5" %>
  </div>

  <fieldset class="mt-8 list-none">
    <legend class="sr-only">Alert distance</legend>
    <%= f.collection_radio_buttons :radius_meters, Alert::VALID_RADIUS_METERS_VALUES, ->(r) { r }, ->(r) { size_option_sentence_alternate(r) } do |b| %>
      <div class="flex items-center">
        <%= b.radio_button class: "w-5 h-5 text-warm-grey" %>
        <%= b.label class: "ml-3 text-navy text-xl" %>
      </div>
    <% end %>
    <%= f.error :radius_meters, class: "mt-5" %>
  </fieldset>

  <div class="mt-12">
    <%= f.button "Create alert" %>
  </div>
<% end %>
