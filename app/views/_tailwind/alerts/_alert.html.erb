<%= link_to edit_profile_alert_path(alert), class: "focus:bg-sun-yellow block" do %>
  <div class="flex items-center justify-between px-4 py-8 group">
    <dl>
      <dt class="hidden">Address</dt>
      <dd class="text-2xl font-bold underline text-fuchsia group-hover:text-fuchsia-darker"><%= alert.address %></dd>
      <dt class="mt-3 text-2xl font-bold leading-6 text-navy">Last email sent</dt>
      <dd class="text-2xl font-normal text-navy">
        <%= last_sent_in_words(alert.last_sent) %>
      </dd>
    </dl>
    <div class="text-light-grey2 group-hover:text-navy">
      <%= render "application/svg/point_right" %>
    </div>
  </div>
<% end %>
