<%= link_to edit_profile_alert_path(alert), class: "focus:bg-sun-yellow block" do %>
  <div class="flex items-center justify-between px-4 py-8 border-t border-light-grey group">
    <dl>
      <dt class="hidden">Address</dt>
      <dd class="text-2xl font-bold underline text-fuchsia group-hover:text-fuchsia-darker"><%= alert.address %></dd>
      <dt class="mt-3 text-2xl font-bold leading-6 text-navy">Last email sent</dt>
      <dd class="text-2xl font-normal text-navy">
        <%= last_sent_in_words(alert.last_sent) %>
      </dd>
    </dl>
    <svg class="stroke-light-grey2 group-hover:stroke-navy" width="29" height="56" viewBox="0 0 29 56" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M1 1L27.2929 27.2929C27.6834 27.6834 27.6834 28.3166 27.2929 28.7071L1 55" stroke-width="2" stroke-linecap="round" />
    </svg>
  </div>
<% end %>
