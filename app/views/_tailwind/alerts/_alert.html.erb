<%= render Tailwind::LinkBlock.new(url: edit_profile_alert_path(alert)) do |c| %>
  <dl class="text-2xl text-navy">
    <dt class="hidden">Address</dt>
    <dd><%= c.linkify(alert.address) %></dd>
    <dt class="mt-3 font-bold leading-6">Last email sent</dt>
    <dd><%= last_sent_in_words(alert.last_sent) %></dd>
  </dl>
<% end %>
