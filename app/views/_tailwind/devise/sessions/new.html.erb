<div class="max-w-lg mx-auto">
  <h1 class="my-20 text-4xl font-bold text-center text-fuchsia font-display">Sign in to Planning&nbsp;Alerts</h1>

  <%= form_with model: resource, url: session_path(resource_name), builder: FormBuilders::Tailwind do |f| %>
    <%# TODO: Add error display and styling %>
    <div class="flex flex-col items-center">
      <div class="w-full">
        <%= f.label :email, "Your email", class: "mb-1 block" %>
        <%= f.text_field :email, class: "block px-4 mb-5 w-full", placeholder: "your@email.com", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="w-full">
        <%= f.label :password, class: "mb-1 block" %>
        <%= f.password_field :password, class: "block px-4 mb-2 w-full", placeholder: "••••••••", autocomplete: "current-password" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-2xl text-navy font-light underline block mb-8" %>
      </div>
      <%= f.hidden_field :remember_me, value: true %>
      <%= f.button "Sign in" %>
    </div>
  <% end %>

  <hr class="mt-14 text-[#D2CFC1]">

  <div class="flex flex-col items-center mb-36">
    <h2 class="mt-20 text-2xl font-bold text-navy">New to Planning Alerts?</h2>
    <p class="text-2xl text-navy">Get started here. It's easy.</p>

    <div class="my-12">
      <%= image_tag "tailwind/new-to-planning-alerts-illustration.svg" %>
    </div>

    <%= render Tailwind::ButtonComponent.new(tag: :a, size: "2xl", colour: :green, href: new_user_registration_path) do %>
      Create an account
    <% end %>
  </div>
</div>
