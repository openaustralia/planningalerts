<% cache "stats", expires_in: 1.hour do %>
  <hr class="mt-12">
  <section class="mt-12 text-xl text-navy">
    <h3 class="mb-12 text-4xl font-semibold">This week at PlanningAlerts</h4>
    <ul class="grid grid-cols-4">
      <li>
        <%= link_to applications_path, class: "flex flex-col items-center" do %>
          <span class="mb-6">We collected</span>
          <span class="font-bold text-7xl text-fuchsia"><%= number_with_delimiter(Application.in_past_week.count) %></span>
          <span class="text-fuchsia">new applications</span>
        <% end %>
      </li>
      <li>
        <%= link_to new_alert_path, class: "flex flex-col items-center" do %>
          <span class="mb-6">You received</span>
          <span class="font-bold text-7xl text-orange"><%= number_with_delimiter(EmailBatch.total_sent_in_past_week) %></span>
          <span class="text-orange">email alerts</span>
        <% end %>
      </li>
      <li>
        <%= link_to new_alert_path, class: "flex flex-col items-center" do %>
          <span class="mb-6">You signed up for</span>
          <span class="font-bold text-7xl text-green"><%= number_with_delimiter(Alert.active.in_past_week.count) %></span>
          <span class="text-green">new email alerts</span>
        <% end %>
      </li>
      <li>
        <%= link_to comments_path, class: "flex flex-col items-center" do %>
          <span class="mb-6">You made</span>
          <span class="font-bold text-7xl text-lavender"><%= number_with_delimiter(Comment.visible.in_past_week.count) %></span>
          <span class="text-lavender">new comments</span>
        <% end %>
      </li>
    </ul>
  </section>
<% end %>
