<nav class="ml-auto w-fit x-data">
  <div x-data="{ open: false }">
    <button x-on:click="open = true; bodyScrolling = false" type="button" class="inline-flex items-center py-2 text-sm text-white rounded-lg lg:hidden focus:outline-none">
      <span class="pr-2 text-base font-medium">Menu</span>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
    <div x-show="open" x-cloak class="fixed top-0 left-0 w-full h-full overflow-y-scroll text-2xl text-right text-white bg-orange">
      <%= render Tailwind::ContainerComponent.new do %>
        <button x-on:click="open = false; bodyScrolling = true" class="inline-flex items-center py-2">
          <span class="pr-2 text-base font-medium">Close</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>

        </button>
        <div class="my-12 mr-8">
          <ul>
            <li><%= link_to "Home", root_path, class: "underline" %></li>
            <li><%= link_to "Search Applications", address_applications_path %></li>
            <li><%= link_to "Coverage", authorities_path %></li>
            <li><%= link_to "Help", faq_path %></li>
            <li><%= link_to "Get the Data", api_howto_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li>
              <% if current_user %>
                <%= link_to current_user.name_with_fallback, profile_path %>
              <% else %>
                <%= link_to "Sign In", new_user_session_path %>
              <% end %>
            </li>
          </ul>
          <ul class="mt-8 font-light">
            <li><%= link_to "Contact", "#" %></li>
            <li><%= link_to "Get Involved", "#" %></li>
            <li><%= link_to "Source Code", "#" %></li>
            <li><%= link_to "Blog", "#" %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="hidden lg:block">
    <ul class="flex items-start space-x-2 text-lg font-medium text-white">
      <%= render Tailwind::NavItemComponent.new(href: root_path, selected: true).with_content("Home") %>
      <%= render Tailwind::NavItemComponent.new(href: address_applications_path).with_content("Search Applications") %>
      <%= render Tailwind::NavItemComponent.new(href: authorities_path).with_content("Coverage") %>
      <%= render Tailwind::NavItemComponent.new(href: faq_path).with_content("Help") %>
      <%= render Tailwind::NavItemComponent.new(href: api_howto_path).with_content("Get the Data") %>
      <%= render Tailwind::NavItemComponent.new(href: about_path).with_content("About") %>
      <% if current_user %>
        <%= render Tailwind::NavItemComponent.new(href: profile_path).with_content(current_user.name_with_fallback) %>
      <% else %>
        <%= render Tailwind::NavItemComponent.new(href: new_user_session_path).with_content("Sign In") %>
      <% end %>
    </ul>
  </div>
</nav>
