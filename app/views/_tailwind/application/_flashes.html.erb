<% if flash.notice %>
  <div class="flex items-center px-4 py-3 mt-8 text-2xl font-bold text-white rounded-lg bg-lavender">
    <%= image_tag "tailwind/tick.svg", class: "mr-5" %>
    <p><%= flash.notice %></p>
  </div>
<% end %>
<%# TODO: The alert flash needs to be styled more like an error %>
<% if flash.alert %>
  <div class="flex items-center px-4 py-3 mt-8 text-2xl font-bold text-white rounded-lg bg-lavender">
    <p><%= flash.alert %></p>
  </div>
<% end %>
