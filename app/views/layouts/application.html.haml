!!! 5
%html
  %head
    %meta(content="text/html; charset=utf-8" http-equiv="Content-Type")
    %meta(name="viewport" content="width=device-width,user-scalable=no,initial-scale=1,maximum-scale=1")
    - if yield(:meta_description)
      %meta{:name => "Description", :content => yield(:meta_description)} 

    %title
      - if yield(:page_title) != ""
        = yield(:page_title)
      - else
        Email alerts of planning applications near you
      | PlanningAlerts

    - if @rss
      %link(rel="alternate" type="application/rss+xml" title="RSS" href=@rss)

    = stylesheet_link_tag 'application.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'

    :javascript
      (function() {
        var config = {
          kitId: 'rdr1djs',
          scriptTimeout: 3000
        };
        var h=document.getElementsByTagName("html")[0];h.className+=" wf-loading";var t=setTimeout(function(){h.className=h.className.replace(/(\s|^)wf-loading(\s|$)/g," ");h.className+=" wf-inactive"},config.scriptTimeout);var tk=document.createElement("script"),d=false;tk.src='//use.typekit.net/'+config.kitId+'.js';tk.type="text/javascript";tk.async="true";tk.onload=tk.onreadystatechange=function(){var a=this.readyState;if(d||a&&a!="complete"&&a!="loaded")return;d=true;clearTimeout(t);try{Typekit.load(config)}catch(b){}};var s=document.getElementsByTagName("script")[0];s.parentNode.insertBefore(tk,s)
      })();

    %style(type="text/css")
      v:* { behavior:url(#default#VML);}

    -# Can't move jquery out of the header because we have inlined javascript in some of the pages
    -# that use jquery. Ugh.
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"

    = stylesheet_link_tag "placeholder_polyfill.min.css"
    = javascript_include_tag "placeholder_polyfill.jquery.min.combo.js"

    = csrf_meta_tag

    = yield :extra_meta_tags
  %body{ :class => body_classes(controller_name, action_name) }
    .container#header
      #statsbanner
        #stats
          #{number_to_human(@alert_count).downcase} applications sent across Australia
      %h1= link_to 'Planning Alerts', root_path
      %h2 
        Email alerts of planning applications 
        %em near you

      .hide= link_to "Skip navigation", "#content"
      #menu
        %ul.collapse
          %li.applications-link= link_to 'Search', address_applications_path
          %li.alerts-link= link_to 'Sign Up', new_alert_path
          %li.faq-link
            = link_to faq_path do
              %abbr(title="Frequently asked questions") FAQ
          %li.authorities-link= link_to 'Coverage', authorities_path
          %li.get-involved-link= link_to 'Get Involved', get_involved_path
          %li.api-link= link_to "Get the Data", api_howto_path
          %li.donate-link= link_to 'Donate', donate_path
          %li.about-link= link_to 'About', about_path

    .container.main
      #content
        - if notice
          %p.notice= notice
        - if alert
          %p.alert= alert
        - if flash[:error]
          %p.error= flash[:error]

        = yield

    = render "shared/tweets"

    #footer.container
      %ul.keepintouch
        %li
          Email us at
          = mail_to "contact@planningalerts.org.au"
        %li
          Chat with us on Twitter
          = link_to "@PlanningAlerts", "http://twitter.com/planningalerts"
          = link_to "@OpenAustralia", "http://twitter.com/openaustralia"
        %li
          Read our blog
          = link_to "openaustraliafoundation.org.au/blog", "http://www.openaustraliafoundation.org.au/blog"
      .oaf
        %h4
          An
          %a(href="http://openaustraliafoundation.org.au" title="The OpenAustralia Foundation") OpenAustralia Foundation
          Project
        %h5 Other wonderful projects from us
        %ul
          %li= link_to "Right To Know", "http://www.righttoknow.org.au/"
          %li= link_to "OpenAustralia.org", "http://www.openaustralia.org/"
          %li= link_to "Election Leaflets", "http://www.electionleaflets.org.au/"

      - if @set_focus_control
        %script(type="text/javascript")
          document.getElementById('#{@set_focus_control}').focus();

    = render "shared/analytics"
    = javascript_include_tag "application"
    :javascript
      var uservoiceOptions = {key: 'planningalerts', host: 'planningalerts.uservoice.com', forum: '49635', alignment: 'right', background_color:'#F4F322', text_color: 'black',
      hover_color: '#FF8C00', lang: 'en', showTab: true};
      function _loadUserVoice() {
      var s = document.createElement('script');
      s.src = ("https:" == document.location.protocol ? "https://" : "http://") + "uservoice.com/javascripts/widgets/tab.js";
      document.getElementsByTagName('head')[0].appendChild(s);
      }
      _loadSuper = window.onload;
      window.onload = (typeof window.onload != 'function') ? _loadUserVoice : function() { _loadSuper(); _loadUserVoice(); };
    - if yield(:map) != ""
      %script(src="http://maps.google.com/maps?file=api&v=2&key=#{Configuration::GOOGLE_MAPS_KEY}" type="text/javascript")
      %script(src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript")
      = javascript_include_tag "mxn.js", "mxn.core.js", "mxn.google.core.js"
    = vanity_js
