- content_for :page_title, "Recent comments"
%h3 Recent comments
- paginated_section @comments, :previous_label => "« Newer", :next_label => "Older »" do
  - @comments.each do |comment|
    .comment
      .text= simple_format(comment.text)
      %span.author comment by #{comment.name} #{time_ago_in_words(comment.updated_at)} ago
      on "#{link_to truncate(comment.application.description), application_path(comment.application)}"
      at #{comment.application.address}.
