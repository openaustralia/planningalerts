.box.application
  %table
    %tr
      %td.address{:colspan => "2"}
        = link_to application.address, application_url(protocol: @protocol, host: @host, id: application.id, utm_source: 'alerts', utm_medium: 'email', utm_campaign: 'view-application')
    - if application.location
      %tr
        %td.map
          = google_static_map(application, :size => "150x150")
        %td.streetview
          = google_static_streetview(application, :size => "150x150")
    %tr
      %td.description{:colspan => "2"}
        = application.description
    %tr
      %td{:colspan => "2"}
        = link_to 'Add your own comment', application_url(protocol: @protocol, host: @host, id: application.id, anchor: 'add-comment', utm_source: 'alerts', utm_medium: 'email', utm_campaign: 'add-comment')
