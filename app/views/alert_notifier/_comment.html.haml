%div.comment
  = Sanitize.clean(ApplicationController.helpers.simple_format(truncate(comment.text, :length => 700)), Sanitize::Config::BASIC).html_safe
  %p
    %span
      by
      = comment.name
      on
    = link_to comment.application.address, application_url(comment.application, protocol: @protocol, host: @host, anchor: "comment#{comment.id}", utm_medium: "email", utm_source: "alerts", utm_campaign: "view-comment")
