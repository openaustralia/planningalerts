!!!
%html
  %head
    :css
      body {
        font-family: sans-serif;
      }
      .header {
        background: #878787;
        padding: 5px 0 5px 10px;
        margin-bottom: 5px;
      }
      .header a {
        color: white;
        font-weight: bold;
        font-size: 20px;
        text-decoration: none;
      }
      .box {
        margin: 6px 11px 25px;
        padding: 15px;
      }
      .advert {
        background: #D0FFFF;
      }
      .advert a {
        color: #A60201;
      }
      .comments-header {
        background: #fcfbbd;
      }
      .comment {
        margin-left: 15px;
        margin-right: 15px;
        background: #fafafa;
      }
      .comment span {
        color: #989898;
      }
      .comment a {
        color: #f2630c;
        font-weight: bold;
      }
      .applications-header {
        background: #fcfbbd;
      }
      .applications-more {
        padding-left: 15px;
      }
      .application {
        background: #eeeeee;
      }
      .application .address {
        padding-bottom: 5px;
      }
      .application .address a {
        font-size: 18px;
        font-weight: bold;
        color: #f2630c;
      }
      .application .map {
        padding: 5px;
        width: 155px;
      }
      .application .streetview {
        padding: 5px;
      }
      .application .description {
        vertical-align: top;
      }
      .application .add-comment a {
        color: #f2630c;
      }
      .footer-outer {
        border-top: solid 3px #F2630C;
      }
      .footer-outer .footer-inner {
        padding-left: 15px; padding-top: 5px;
      }
      .footer-outer .footer-inner a {
        color: #f2630c;
      }

  %body
    = render "header"
    - unless @comments.empty?
      = render "comments"
    - unless @applications.empty?
      = render "applications"
    .footer-outer
      .footer-inner
        = render "footer_main"
        = render "footer_actions"
